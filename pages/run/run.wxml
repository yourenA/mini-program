<view class="head" style="flex-direction:row;">
 
  <button bindtap="openLocation" type="primary">打开位置</button>
  <button bindtap="starRun" type="primary">开始跑步</button>
  <button bindtap="stopRun" type="warn">暂停跑步</button>
  <button  >{{count}}</button>

</view>
<view class="mainView">
  <map class="mapView" style="width: 100%; height: 400px;" latitude="{{latitude}}" longitude="{{longitude}}" markers="{{markers}}" polyline="{{polyline}}">
  </map>
</view>