/* pages/preview/preview.wxss */

.preview-container {
  width: 100%;
  height: 100%;
}



.preview-image {
  width: 100%;
  padding: 0;
  margin: 0;
  vertical-align: middle;
  padding-bottom: 150rpx;
}

.preview-save {
  font-size: 24px;
  color: #fff;
  width: 100%;
  height:150rpx;
  background: #52c41a;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  
}
.preview-progress{

  position: fixed;
  margin: 0 auto;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  top:0;
  left:0;
  text-align: center;
 
 
}
.preview-progress progress{
  margin: 0 auto;
  width: 75%;
  color: #FFFFFF;
}

.question-images-area {
  padding: 20rpx 0;
}

.question-images-tool {
  padding-left:30rpx;
  font-size: 35rpx 
}

.question-images {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
   flex-wrap: wrap;
}

.q-image-wrap {
  box-sizing: border-box;
  width: 33.3%;
  padding: 10rpx;
  position: relative
  
}
.q-image-progress{
  position: absolute;
  top: 20rpx;
  left: 0;
  width: 100%;

  display: flex;
  justify-content: center;
}
.q-image-progress progress{
  width: 75%
}
.q-image {
  flex: 1;
  height: 210rpx;
  width: 100%;
}

.q-image-add{
   align-self: flex-start;
 

}

.q-image-add image{
  background: #CCC
}

.q-image-remover {
  text-align: center;
}
